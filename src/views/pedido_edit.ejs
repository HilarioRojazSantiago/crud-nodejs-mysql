<%- include ('partials/_header')  %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= data.id %>" method="post">
                        <div class="form-group">
                            <input type="text" name="id_mesa" value="<%= data.id_mesa %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="productos" value="<%= data.productos %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" value="<%= data.estado %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="total" value="<%= data.total %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Editar pedido
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('partials/_footer')  %>